<UserControl x:Class="Vapeur.View.CustomUC.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vapeur.View.CustomUC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF4E626B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Center" Margin="0,106,0,0" Orientation="Vertical" VerticalAlignment="Top">
            <Button x:Name="btnLoan" Content="Louer" Margin="0,10,0,0"/>
            <Button x:Name="btnBook" Content="Reserver" Margin="0,10,0,0"/>
        </StackPanel>
        <Label Content="Balance: " HorizontalAlignment="Center" Margin="0,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Catalogue" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top"/>
        
        <DataGrid Grid.Column="1"/>

    </Grid>
</UserControl>
